<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/style.css" />
    <title>Nodejs Basic</title>
  </head>
  <body>
    <!-- top navigator -->
    <div class="topnav">
      <a href="/">Home</a>
      <a class="active" href="/upload">Upload File</a>
    </div>
    <div class="upload-file-container">
      <form
        action="/upload-profile-pic"
        enctype="multipart/form-data"
        method="POST"
      >
        <div>
          <label for="">Avatar</label>
          <input type="file" name="profile_pic" />
        </div>
        <div>
          <button class="btn-save" type="submit">Save File</button>
        </div>
      </form>

      <form
        action="/upload-multiple-images"
        method="POST"
        enctype="multipart/form-data"
      >
        <div>
          <label>Select Multiple Image:</label>
          <input type="file" name="multiple_images" multiple />
        </div>
        <div>
          <button class="btn-save" type="submit">Save File</button>
        </div>
      </form>
    </div>
  </body>
</html>
